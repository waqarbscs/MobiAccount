<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.OneWindow.sol.MobiAccount.MainActivity"
    android:orientation="vertical"
    android:weightSum="8"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#00A99D"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOBI ACCOUNT"
            android:textSize="26sp"
            android:gravity="center"
            android:id="@+id/smstext" />
        <View
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:background="#00A99D"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mian"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Income"
            android:id="@+id/btnIncome"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:layout_margin="8dp"
            android:drawableTop="@drawable/income"
            android:elevation="8dp"
            android:paddingTop="18dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Expense"
            android:id="@+id/btnExpense"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:layout_margin="8dp"
            android:drawableTop="@drawable/expense"
            android:elevation="8dp"
            android:paddingTop="18dp"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Account Heads"
            android:id="@+id/btnStatus"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:layout_margin="8dp"
            android:drawableTop="@drawable/account"
            android:elevation="4dp"
            android:paddingTop="18dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Status"
            android:id="@+id/btnAccount"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:layout_margin="8dp"
            android:drawableTop="@drawable/status"
            android:elevation="4dp"
            android:paddingTop="18dp"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="View"
            android:id="@+id/btnView"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:layout_margin="8dp"
            android:drawableTop="@drawable/view"
            android:elevation="4dp"
            android:paddingTop="18dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="About"
            android:id="@+id/btnAbout"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:layout_margin="8dp"
            android:drawableTop="@drawable/about"
            android:elevation="4dp"
            android:paddingTop="18dp"/>


    </LinearLayout>

</LinearLayout>
